# Environment configuration for eSewa Integration
# Copy this file to .env and update with your actual values

# Flask Configuration
SECRET_KEY=your-super-secret-key-here-change-in-production
FLASK_ENV=development

# eSewa Configuration
ESEWA_ENV=test
# Use 'test' for development/testing, 'live' for production

# For Test Environment (default values)
# ESEWA_MERCHANT_CODE=EPAYTEST
# ESEWA_SECRET_KEY=8gBm/:&EnhH.1/q

# For Live/Production Environment (get these from eSewa)
# ESEWA_MERCHANT_CODE=your-actual-merchant-code
# ESEWA_SECRET_KEY=your-actual-secret-key

# Success and Failure URLs
SUCCESS_URL=http://localhost:5000/payment/success
FAILURE_URL=http://localhost:5000/payment/failure

# Database Configuration (if using database)
# DATABASE_URL=sqlite:///thapa_kirana.db
# or for PostgreSQL: postgresql://username:password@localhost/dbname

# Logging
LOG_LEVEL=INFO

# Other Configuration
DELIVERY_BASE_CHARGE=50
EXPRESS_SURCHARGE=40
FREE_DELIVERY_THRESHOLD=500
